{
    "name": "alexkoj/flarum-recaptcha",
    "version": "1.8.5",
    "description": "Increase your forum's security with Google reCAPTCHA",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/alexkoj/flarum-recaptcha/issues",
        "source": "https://github.com/alexkoj/flarum-recaptcha",
        "forum": "https://discuss.flarum.org/d/18399"
    },
    "homepage": "https://friendsofflarum.org/",
    "funding": [
        {
            "type": "website",
            "url": "https://opencollective.com/fof/donate"
        }
    ],
    "require": {
        "flarum/core": "^1.6.0",
        "google/recaptcha": "^1.2"
    },
    "authors": [
        {
            "name": "Alex Koj",
            "email": "alexkoj@getl.cc"
        }
    ],
    "replace": {
        "sijad/flarum-ext-recaptcha": "*"
    },
    "autoload": {
        "psr-4": {
            "Alexkoj\\ReCaptcha\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Alexkokj reCAPTCHA",
            "category": "feature",
            "icon": {
                "name": "fas fa-robot",
                "backgroundColor": "#e74c3c",
                "color": "#fff"
            },
            "optional-dependencies": [
                "alexkoj/flarum-oauth"
            ]
        },
        "flagrow": {
            "discuss": "https://discuss.flarum.org/d/18399"
        },
        "flarum-cli": {
            "modules": {
                "githubActions": true
            }
        }
    },
    "require-dev": {
        "flarum/phpstan": "*"
    },
    "scripts": {
        "analyse:phpstan": "phpstan analyse",
        "clear-cache:phpstan": "phpstan clear-result-cache"
    },
    "scripts-descriptions": {
        "analyse:phpstan": "Run static analysis"
    }
}
